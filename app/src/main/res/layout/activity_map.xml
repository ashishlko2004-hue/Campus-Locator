<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <!-- Map View fills the entire screen as background -->
    <com.example.myapplication.CampusMapView
        android:id="@+id/map_view_on_new_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card is now an overlay at the top -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/route_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/back_button_map_page"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/route_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Campus Route Finder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/back_button_map_page"
                app:layout_constraintBottom_toBottomOf="@id/back_button_map_page"
                app:layout_constraintStart_toEndOf="@id/back_button_map_page"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/back_button_map_page">

                <TextView
                    android:id="@+id/route_info_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="From: Main Gate"
                    android:textSize="14sp"
                    android:textColor="#2E7D32" />

                <TextView
                    android:id="@+id/route_info_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="To: Library"
                    android:textSize="14sp"
                    android:textColor="#C62828" />

                <TextView
                    android:id="@+id/route_info_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="Distance: 450m" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 3D Toggle Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_3d_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="3D View"
        app:icon="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Demo Mode Toggle Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_demo_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Demo Mode"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:icon="@android:drawable/ic_menu_mylocation"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_3d_toggle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>